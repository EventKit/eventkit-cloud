{
    "compilerOptions": {
        "sourceMap": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "lib": ["dom", "es6", "esnext"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ],
    "include": [
        "./eventkit_cloud/ui/static/ui/app/"
    ]
}
